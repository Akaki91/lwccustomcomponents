{
    "trailingComma": "es5",
    "singleAttributePerLine": false,
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 120,
    "singleQuote": true,
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "overrides": [
        { "files": "**/lwc/**/*.html", "options": { "parser": "lwc" } },
        { "files": "*.{cmp,page,component}", "options": { "parser": "html" } }
    ]
}
